<% provide(:title, "Edit user") %>
<h1>Dear XCoder User, Update your profile here</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, remote: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <br><%= f.label :name %>
        <br><%= f.text_field :name %>

        <br><%= f.label :email %>
        <br><%= f.text_field :email %>

        <br><%= f.label :password %>
        <br><%= f.password_field :password %>

        <br><%= f.label :password_confirmation, "Confirm Password" %>
        <br><%= f.password_field :password_confirmation %>

        <br><%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>